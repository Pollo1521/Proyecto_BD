@model Proyecto_BD.Models.Medicina

@{
    ViewData["Title"] = "Create";
}

<h4>Medicina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio_Medicina" class="control-label"></label>
                <input asp-for="Precio_Medicina" class="form-control" />
                <span asp-validation-for="Precio_Medicina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_Medicina" class="control-label"></label>
                <input asp-for="Nombre_Medicina" class="form-control" />
                <span asp-validation-for="Nombre_Medicina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
