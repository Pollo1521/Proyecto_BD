@model Proyecto_BD.Models.Medico

@{
    ViewData["Title"] = "AsignarConsultorio";
}

<h1>Asignar Consultorio</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AsignarConsultorio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID_Medico" />
            <input type="hidden" asp-for="ID_Usuario" />
            <input type="hidden" asp-for="Cedula" />
            <input type="hidden" asp-for="ID_Especialidad" />
            <input type="hidden" asp-for="ID_Jornada" />
            <div class="form-group">
                <label asp-for="ID_Consultorio" class="control-label"></label>
                <select asp-for="ID_Consultorio" class="form-control" asp-items="ViewBag.ID_Consultorio"></select>
                <span asp-validation-for="ID_Consultorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Asignar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
