@model Proyecto_BD.Models.Recepcionista

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Recepcionista</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @(Model?.Usuario?.Nombre + " " + Model?.Usuario?.Apellido_Paterno + " " + Model?.Usuario?.Apellido_Materno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Correo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Fecha_Nacimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Fecha_Nacimiento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.CURP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.CURP)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Jornada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Jornada.descripcion)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditarDatos" asp-route-id="@Model?.ID_Recepcionista" class="btn btn-primary me-2">Modificar Datos</a>
    <a asp-action="EditarJornadas" class="btn btn-secondary me-2">Administrar Jornadas</a>
    <a asp-action="EditarConsultorios" class="btn btn-secondary me-2">Administrar Consultorios</a>
    <a asp-action="AdministrarFarmacia" class="btn btn-info me-2">Administrar Farmacia</a>
    <a asp-action="AdministrarServicios" class="btn btn-info me-2">Administrar Servicios</a>
    <a asp-action="AdministrarVentas" class="btn btn-success me-2">Administrar Venta</a>
    <a asp-action="RegistrarEmpleado" class="btn btn-dark">Agregar Empleado</a>

</div>
