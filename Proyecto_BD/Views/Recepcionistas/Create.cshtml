@model Proyecto_BD.Models.Recepcionista

@{
    ViewData["Title"] = "Create";
}

<h4>Recepcionista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">               
                <input asp-for="ID_Usuario" type="hidden" value="@ViewData["ID_Usuario"]" />
            </div>
            <div class="form-group">
                <label asp-for="ID_Jornada" class="control-label"></label>
                <select asp-for="ID_Jornada" class ="form-control" asp-items="ViewBag.ID_Jornada"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
