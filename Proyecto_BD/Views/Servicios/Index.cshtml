@model IEnumerable<Proyecto_BD.Controllers.Servicio>

@{
    ViewData["Title"] = "Index";
}

<h1>Servicios</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar Servicio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio_Servicio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio_Servicio)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ID_Servicio" class="btn btn-primary">Editar</a>
            </td>
        </tr>
}
    </tbody>
</table>
