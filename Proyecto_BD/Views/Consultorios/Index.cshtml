@model IEnumerable<Proyecto_BD.Models.Consultorio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="AsignarConsultorio">Asignar Consultorio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Piso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero_Consultorio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponible)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Piso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_Consultorio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Consultorio">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Consultorio">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Consultorio">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
