@model IEnumerable<Proyecto_BD.Models.Tratamiento>

@{
    ViewData["Title"] = "Index";
}

<h1>Tratamientos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Receta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indicaciones)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Receta.Diagnostico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indicaciones)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Tratamiento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Tratamiento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Tratamiento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
