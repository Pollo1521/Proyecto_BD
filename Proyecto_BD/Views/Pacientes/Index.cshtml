@model IEnumerable<Proyecto_BD.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Sangres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alergia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estatura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Apellido_Materno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Sangres.Tipo_Sangre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alergia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatura)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Paciente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Paciente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Paciente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
