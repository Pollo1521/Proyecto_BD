@model Proyecto_BD.Models.Paciente

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
			@(Model?.Usuario?.Nombre + " " + Model?.Usuario?.Apellido_Paterno + " " + Model?.Usuario?.Apellido_Materno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Correo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Fecha_Nacimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Fecha_Nacimiento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.CURP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.CURP)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo_Sangres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo_Sangres.Tipo_Sangre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Peso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Peso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alergia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Alergia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estatura)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estatura)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID_Paciente" class="btn btn-primary">Modificar Datos</a>
    <a asp-action="AgendarCita" class="btn btn-success">Agendar Cita</a>
    <a asp-action="RealizarPago" class="btn btn-warning">Realizar Pago</a>
    <a asp-action="VerCitas" class="btn btn-info text-white">Historial de Citas</a>
</div>
