@model IEnumerable<Proyecto_BD.Models.Ticket>

@{
    ViewData["Title"] = "RegistrarVenta";
}

<h1>Registrar Venta</h1>

<p>
    <a asp-action="AgregarServicio" class="btn btn-success">Agregar Servicio</a>
    <a asp-action="AgregarMedicina" class="btn btn-primary">Agregar Medicina</a>
    <a asp-action="GenerarTicket" class="btn btn-info">Generar Ticket</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Venta.ID_Ventas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Ticket">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Ticket">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
