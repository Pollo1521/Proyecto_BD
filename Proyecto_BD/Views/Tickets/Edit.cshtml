@model Proyecto_BD.Models.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID_Ticket" />
            <div class="form-group">
                <label asp-for="ID_Venta" class="control-label"></label>
                <select asp-for="ID_Venta" class="form-control" asp-items="ViewBag.ID_Venta"></select>
                <span asp-validation-for="ID_Venta" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tipo_item" /> @Html.DisplayNameFor(model => model.Tipo_item)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ID_Item" class="control-label"></label>
                <input asp-for="ID_Item" class="form-control" />
                <span asp-validation-for="ID_Item" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
