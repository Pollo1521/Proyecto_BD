@{
    Layout = null;
    <link rel="stylesheet" href="~/css/Registro.css" />
}

<header class="header">
    <div class="logo">
        <img src="~/Imagenes/logo_white_large.png" height=70>
        <img src="~/Imagenes/gorrito.png" height=70 align="right">
    </div>
</header>

<div class="login">
    <div class="login-sistge">
        <img src="~/Imagenes/logo_white_large.png">
        <hr color="white" size=10 />
        <br />
        <h3>Ya tienes cuenta? <a style="color:white; text-decoration: none;" asp-action="Login">Ingresa Aqui</a></h3>
        <h3>No estas Registrado? <a style="color:white; text-decoration: none;" asp-action="RegistroPaciente">Registrate Aqui</a></h3>
    </div>
    <div class="login-datos">
        <h2>Recuperar Contraseña</h2>

        <span style="color:red">@Html.Raw(ViewBag.Message)</span>
        <span style="color:green">@Html.Raw(ViewBag.Completado)</span>

        <form class="form" method="post" asp-action="RecuperarPassword" id=frmFormulario>
            <fieldset class="email" style="border: none; padding: 0; margin: 20px 0; position: relative;">
                <input type="email" class="form-control" name="Correo" placeholder="Correo Electrónico" required style="width: 100%; height: 48px; color: hsl(0, 0, 20); padding: 15px 40px 15px 15px; border-radius: 5px; font-size: 14px;
                                                        outline: none!important; border: 1px solid hsla(0, 0, 0, 0.3); box-shadow: inset 0 1px 4px hsla(0, 0, 0, 0.2); vertical-align: top;" />
            </fieldset>

            <button type="submit" class="btn">Recuperar Contraseña</button>
        </form>
    </div>
</div>